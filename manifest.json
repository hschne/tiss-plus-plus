{
  "manifest_version": 2,

  "name": "TISS++",
  "description": "This extension improves TISS with additional functions",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [ "https://tiss.tuwien.ac.at/*" ],
      "js": ["lib/jquery-2.1.4.min.js", "src/js/content-scripts/lva-page.js", "src/js/content-scripts/lva-search-page.js", "src/js/content-scripts/content-script.js" ],
      "css": ["css/background.css"]
    }
  ],
  "background": {
    "scripts": ["lib/jquery-2.1.4.min.js", "src/js/background/background.js", "src/js/background/lva-list.js"]
  },
  "icons": {
    "128": "resources/logo.png"
  },
  "web_accessible_resources": [
    "resources/*",
    "lib/*"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}